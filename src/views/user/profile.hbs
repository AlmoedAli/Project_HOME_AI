<div class="d-flex flex-row justify-content-between align-items-center">
    <h2 class="flex-grow-1">Thông tin người dùng</h2>
</div>

<div class="d-flex flex-column bg-white align-items-center container-fluid gray-border gap-3 border-radius-24 w-75"
    style="padding: 24px;">
    <div class="row container-fluid gap-3">
        <div class="row">
            <h4>Thông tin</h4>
        </div>
        <div class="row">
            <div class="col-4">Tên</div>
            <div class="col-8">{{user.name}}</div>
        </div>
        <div class="row">
            <div class="col-4">Tên đăng nhập</div>
            <div class="col-8">{{user.username}}</div>
        </div>
        <div class="row">
            <div class="col-4">Số CCCD</div>
            <div class="col-8">{{user.cardID}}</div>
        </div>
    </div>
    <hr class="m-1 w-100">
    <div class="container-fluid row justify-content-center">
        <div class="row mb-3 p-0 w-100">
            <h4 class="col">Danh sách nhà ở</h4>
        </div>
        <div class="row">
            {{#each houses}}
            {{#if @first}}
            {{else}}
            <hr style="height: 0.2px;">
            {{/if}}
            <div class="container-fluid mb-3 p-0">
                <div class="row mb-1">
                    <div class="col-2 fw-bold">Tên</div>
                    <div class="col">{{name}}</div>
                </div>
                <div class="row">
                    <div class="col-2 fw-bold">Địa chỉ</div>
                    <div class="col">{{address}}</div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>