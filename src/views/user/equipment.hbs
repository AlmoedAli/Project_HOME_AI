
<div class="container">
    <div class="row">
        <h3 class="p-0">Thông tin thiết bị</h3>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col-12 border bg-white" style="border-radius: 8px; box-shadow: 0 0 10px 1px #bebebe;">
            <div class="row mt-3">
                <div class="row d-flex justify-content-center">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-6 m-0 p-0 mt-2">
                                Tên thiết bị: {{equipments.[0].Name}}
                            </div>
                            <div class="col-6 m-0 p-0 mt-2">
                                Loại thiết bị: {{equipments.[0].type}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="row d-flex justify-content-center">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-6 m-0 p-0 mt-2">
                                Vị trí: {{equipments.[0].location}}
                            </div>
                            <div class="col-6 m-0 p-0 mt-2">
                                Trạng thái: {{equipments.[0].state}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="row d-flex justify-content-center">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-6 m-0 p-0 mt-2">
                                Công suất: {{equipments.[0].location}}
                            </div>
                            <div class="col-6 m-0 p-0 mt-2">
                                Hẹn giờ: {{equipments.[0].location}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="row d-flex justify-content-center">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-6 m-0 p-0 mt-2">
                                Hẹn giờ bật: {{equipments.[0].location}}
                            </div>
                            <div class="col-6 m-0 p-0 mt-2">
                                Hẹn giờ tắt: {{equipments.[0].location}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 d-flex justify-content-center">
                    <h4>Thời gian sử dụng</h4>
                </div>
                <div class="row p-0 m-0 mt-2 mb-3 d-flex justify-content-center">
                    <div class="col-11" style="border: 1px solid #ccc; padding: 10px; border-radius: 8px; box-shadow: 0 0 10px 1px #bebebe;">
                        <div class="row">
                            <div class="col-6 mt-2">
                                <p>Tổng thời gian sử dụng</p>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <div class="form-group">
                                    <label for="dayDropdown"></label>
                                    <select class="form-control float-right" id="dayDropdown" style="width: 125px; border: 1px solid #ccc; border-radius: 8px;">
                                        <option value="">Ngày</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                    </select>
                                </div>
                            </div>
                            <canvas id="timeLineChart" width="400" height="75"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-11 m-0 mt-2 mb-3 justify-content-center">
                    <div class="row justify-content-end">
                            <div class="col-auto p-0">
                                <button type="button" class="btn" style="background-color: #7E25CA; color: white; margin-right: 16px;">Xuất lịch sử</button>
                            </div>
                            <div class="col-auto p-0">
                                <a href="/equipment_modify" type="button" class="btn" style="background-color: #7E25CA; color: white; margin-right: 16px;" > Chỉnh sửa </a>
                                {{!-- <button type="button" href="/equipment_modify" class="btn" style="background-color: #7E25CA; color: white; margin-right: 16px;">Chỉnh sửa</button> --}}
                            </div>
                            <div class="col-auto p-0">
                                <button type="button" class="btn" style="background-color: #F80D0D; color: white">Xóa</button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const timeData = {
        labels: ['Mon', 'Tue', 'Web', 'Thu', 'Fri', 'Sat', 'Sun'],
        datasets: [{
            label: 'time Data',
            data: [12, 13, 12, 13, 12, 13, 14],
            fill: false,
            backgroundColor: '#7E25CA',
            borderColor: '#7E25CA',
            borderWidth: 1,
            barThickness: 30,
            borderRadius: 4,
        }]
    };

    const timeConfig = {
        type: 'bar',
        data: timeData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: false,
                },
            },
        }
    };

    var timeLineChart = new Chart(document.getElementById('timeLineChart'), timeConfig);
</script>


