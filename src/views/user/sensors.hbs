<div class="d-flex flex-row justify-content-between align-items-center">
    <h1 class="flex-grow-1">Các cảm biến</h1>
    {{> listViewButton}}
    {{> normalButton content="+ Thêm cảm biến"}}
</div>

<div class="d-flex flex-column bg-white container-fluid gray-border gap-24 border-radius-24" style="padding: 24px;">
    <div class="d-flex align-items-center p-0 justify-content-between" style="gap: 24px; height: 40px;">
        {{> searchBar}}
        {{> dataList selections=selections}}
    </div>

    {{#each houses}}
    <div class="col p-2">
        <div class="card app-shadow">
            <h5 class="card-title">Nhà: {{this.Name}}</h5>
            <div>Địa chỉ: {{this.Address}}</div>
            <div class="row row-cols-4 g-2" style="">
                {{#each devices}}
                <div class="col p-2">
                    <div class="card app-shadow">
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <div class="">icon</div>
                            <div class="">{{this.value}}</div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            {{!-- <p class="card-text">Ngưỡng an toàn trên: {{this.rangeUp}}</p>
                            <p class="card-text">Ngưỡng an toàn dưới: {{this.rangeDown}}</p> --}}
                            <p class="card-text">Vị trí: {{this.Location}}</p>
                            <a href="./sensor/{{this._id}}/" class="btn" style="background-color:#7E25CA; color: white">Chi tiết</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>